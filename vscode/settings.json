{
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.idea": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true
    },
    "search.useIgnoreFiles": false,
    "editor.fontFamily": "Hack",
    "editor.fontSize": 12,
    "editor.renderWhitespace": "boundary",
    "editor.formatOnSave": true,
    "editor.tabCompletion": "on",
    "explorer.openEditors.visible": 0,
    "editor.rulers": [
        80,
        120
    ],
    "editor.minimap.maxColumn": 80,
    "editor.roundedSelection": false,
    "workbench.colorCustomizations": {
        "[Darcula]": {
            "editorInfo.foreground": "#808080",
            "editorWarning.foreground": "#BE9117",
            "editorError.foreground": "#9E2927",
            "editorOverviewRuler.infoForeground": "#808080",
            "editorOverviewRuler.warningForeground": "#BE9117",
            "editorOverviewRuler.errorForeground": "#9E2927"
        }
    },
    "workbench.editor.enablePreview": false,
    "workbench.settings.editor": "json",
    "window.restoreWindows": "all",
    "window.restoreFullscreen": true,
    "go.coverageDecorator": {
        "type": "highlight"
    },
    "go.formatTool": "goimports",
    "go.coverOnSave": true,
    "go.coverOnSingleTest": true,
    "go.coverOnTestPackage": true,
    "go.editorContextMenuCommands": {
        "toggleTestFile": true,
        "addTags": true,
        "removeTags": true,
        "testAtCursor": true,
        "testFile": true,
        "testPackage": true,
        "generateTestForFunction": true,
        "generateTestForFile": true,
        "generateTestForPackage": true,
        "addImport": true,
        "testCoverage": true,
        "playground": true
    },
    "go.removeTags": {
        "promptForTags": true
    },
    "ruby.lint": {
        "rubocop": {
            "rails": true,
            "lint": true,
            "gems": true
        }
    },
    "ruby.specCommand": "rails test",
    "ruby.specPattern": "test",
    "ruby.specSaveFile": true,
    "workbench.colorTheme": "Darcula",
    "zenMode.centerLayout": false,
    "html.format.indentInnerHtml": true,
    "html.format.endWithNewline": true,
    "terminal.external.osxExec": "iTerm.app",
    "breadcrumbs.enabled": true,
    "solargraph.diagnostics": true,
    "better-comments.tags": [
        {
            "tag": "todo",
            "color": "#A8C023",
            "strikethrough": false,
            "backgroundColor": "transparent"
        },
        {
            "tag": "note",
            "color": "#0977AB",
            "strikethrough": false,
            "backgroundColor": "transparent"
        }
    ]
}
